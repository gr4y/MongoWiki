Article is new Record? <%= @article.new_record? %>

<% action = @article.new_record? ? "/create" : "/update/#{@article._id}" %>

<form action="<%= action %>" method="post">
	
	<label for="article[title]">Title: </label>
	<input type="text" value="<%= @article.title %>" name="article[title]" />

	<label for="article[text]">Text: </label>
	<textarea name="article[text]"><%= @article.text %></textarea>

	<input type="submit" name="Save" class="button"/>

</form>