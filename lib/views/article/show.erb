<div class="article" id="<%= @article._id %>">
	<h1 id="title">
		<%= @article.title %>
	</h1>
	<div id="text">
		<%= markdown(@article.text) %>
	</div>
	<div id="actions">
		<a href="<%= url("/edit/#{@article._id}") %>" class="button">edit article</a>
		<a href="<%= url("/destroy/#{@article._id}") %>" class="button red">destroy article</a>
	</div>
</div>